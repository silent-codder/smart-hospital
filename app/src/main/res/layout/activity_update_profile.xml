<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Counter.UpdateProfileActivity">

    <ImageView
        android:id="@+id/counterImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pending_txt_bg"
        android:padding="8dp"
        android:textColor="@color/white"
        android:text="Choose Profile Image"
        android:textStyle="bold"
        android:layout_below="@id/counterImg"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_txt_bg"
        android:layout_below="@id/editProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter Name"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_txt_bg"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter email"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/address"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_txt_bg"
        android:layout_below="@id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter city / village"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@id/address"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>