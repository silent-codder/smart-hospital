<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ChildFile">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardElevation="1dp"
       app:cardCornerRadius="20dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:padding="20dp"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/file"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="File Number  : "
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/fileNumber"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1"
               android:layout_toRightOf="@id/file"/>
           <TextView
               android:id="@+id/child"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Child Name  : "
               android:layout_below="@id/file"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/childName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Ajinkya"
               android:layout_below="@id/file"
               android:layout_toRightOf="@id/child"/>
           <TextView
               android:id="@+id/parent"
               android:layout_below="@id/child"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:text="Parent Name  : "/>
           <TextView
               android:id="@+id/parentName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Ajinkya Shinde"
               android:layout_below="@id/child"
               android:layout_toRightOf="@id/parent"/>
           <TextView
               android:id="@+id/birth"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Birth Date  : "
               android:layout_below="@id/parentName"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/childDOB"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="9 July 1999"
               android:layout_below="@id/parentName"
               android:layout_toRightOf="@id/parent"/>

           <TextView
               android:id="@+id/weight"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Weight : "
               android:layout_below="@id/birth"
               android:textStyle="bold"/>
           <TextView
               android:id="@+id/childWeight"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="15 kg"
               android:layout_below="@id/birth"
               android:layout_toRightOf="@id/parent"/>

       </RelativeLayout>

   </androidx.cardview.widget.CardView>

</RelativeLayout>